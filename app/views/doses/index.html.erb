<h1>Doses for the <%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
<ul>
  <li>
    <%= dose.description %> <%= dose.ingredient.name %>
  </li>

</ul>

<% end %>

<ul>
  <li><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail)  %></li>
<li><%= link_to "Back to the list of Cocktail", cocktails_path  %></li>
</ul>
